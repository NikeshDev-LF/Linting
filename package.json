{
  "name": "cypress-demo-qa",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:all": "npm run lint && npm run format:check",
    "test:form:chrome": "npx cypress run --browser chrome --spec cypress/e2e/formSubmission.cy.js",
    "test:form:edge": "npx cypress run --headed --browser edge --spec cypress/e2e/formSubmission.cy.js",
    "test:chrome": "npx cypress run --browser chrome",
    "test:edge": "npx cypress run --browser edge",
    "open": "npx cypress open",
    "prepare": "npx husky init && husky install"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "cypress": "^14.5.4",
    "dotenv": "^16.4.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,cy.js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
